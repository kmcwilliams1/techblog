<section>
  <h2>{{post.name}}</h2>
  <p>{{post.description}}</p>
  <p>Created by {{post.user.username}} on {{format_date post.date_created}}</p>
  {{#if logged_in}}
    <form class="form new-comment-form" data-id={{post.id}}>
      <div class="form-group">
        <input class="form-input" type="text" id="comment-content" name="comment-content" placeholder="Enter comment text"/>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary" id="addComment">Add Comment</button>
      </div>
    </form>
  {{/if}}  
</section>

<script src="/js/post.js"></script>



